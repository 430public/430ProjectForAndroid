<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_108"
    app:cardCornerRadius="@dimen/dp_3"
    android:elevation="@dimen/dp_6"
    >

    <RelativeLayout
        android:id="@+id/cardview_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        >
        <com.projectforandroid.widget.GeneralImageView
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_92"
            android:id="@+id/cardview_imageView"
            android:layout_alignParentRight="true"
            android:src="@drawable/default_menu_bg"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻标题这个是新闻标题，这个是新闻标题这个是新闻标题."
            android:maxLines="2"
            android:textColor="@color/color_black"
            android:id="@+id/cardview_title"
            android:textSize="@dimen/dp_14"
            android:layout_toLeftOf="@+id/cardview_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:id="@+id/cardview_content"
            android:layout_below="@+id/cardview_title"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/cardview_imageView"
            android:textSize="@dimen/dp_13"
            android:maxLines="3"
            android:textColor="@color/color_565656"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-10-8"
            android:id="@+id/cardview_time"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_a5a5a5"
            android:drawableLeft="@drawable/time1px"
            android:textSize="@dimen/dp_8"
            android:gravity="center"
            android:layout_below="@+id/cardview_content"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>