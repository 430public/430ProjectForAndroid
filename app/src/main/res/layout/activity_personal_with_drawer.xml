<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_drawer_menu"
    android:fitsSystemWindows="true"
    >
    <!-- 需要呈现的内容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_124"
            android:background="@drawable/default_menu_bg"
            android:id="@+id/relativeLayout"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgbtn_back"
                android:background="@drawable/back2x"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal"
                android:id="@+id/personaldetial"
                android:textColor="@color/color_f0f0f0"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_alignLeft="@+id/imgbtn_back"
                />
        </RelativeLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:id="@+id/floatbutton"
            app:borderWidth="0dp"
            app:backgroundTint="@color/color_00acc1"
            android:src="@drawable/glass"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_70"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/layout1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_username"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/usernamex2"
                android:layout_marginTop="@dimen/dp_140"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="昵称"
                android:textColorHint="@color/color_a5a5a5"
                android:ems="10"
                android:id="@+id/username"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_toRightOf="@+id/img_username"
                android:layout_alignBottom="@+id/img_username"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_8"
                android:text="@string/username_waring"
                android:id="@+id/waring"
                android:layout_below="@+id/username"
                android:layout_alignLeft="@+id/username"
                android:textColor="@color/color_ff261a"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/layout1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/layout2"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_header"
                android:src="@drawable/headerx2"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <com.projectforandroid.widget.CircleImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:id="@+id/circle_header"
                android:src="@drawable/default_menu_bg"
                android:layout_marginLeft="@dimen/dp_36"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击更换头像"
                android:id="@+id/textView"
                android:textColor="@color/color_00acc1"
                android:textSize="@dimen/dp_24"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:id="@+id/layout3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:id="@+id/img_sex"
                android:src="@drawable/sex"
                android:layout_marginTop="@dimen/dp_16"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_36"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:id="@+id/man"
                    android:textColor="@color/color_00acc1"
                    android:drawableRight="@drawable/manx1"
                    android:checked="true"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中"
                    android:id="@+id/halfman"
                    android:textColor="@color/color_00acc1"
                    android:drawableRight="@drawable/halfmanx1"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:id="@+id/women"
                    android:textColor="@color/color_00acc1"
                    android:drawableRight="@drawable/womenx1"
                    />
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout4"
            android:layout_below="@+id/layout3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_email"
                android:src="@drawable/email2x"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="邮箱"
                android:textColorHint="@color/color_a5a5a5"
                android:ems="10"
                android:id="@+id/email"
                android:layout_toRightOf="@+id/img_email"
                android:layout_marginLeft="@dimen/dp_36"
                android:layout_alignBottom="@+id/img_email"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_8"
                android:text="@string/username_waring"
                android:id="@+id/waring2"
                android:layout_below="@+id/email"
                android:textColor="@color/color_ff261a"
                android:layout_alignLeft="@+id/email"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/include_drawer_menu_header"
        app:menu="@menu/menu_drawer"
        />

</android.support.v4.widget.DrawerLayout>

